<UserControl
    x:Class="Mxp.Win.NavBarButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mxp.Win"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button BorderBrush="Transparent" Click="Button_Click" >
        <StackPanel>
            <Image Name="ImageIcon"  Margin="20,3,20,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Name="TextBlockName"  Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
